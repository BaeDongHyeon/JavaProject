package Main;

import java.awt.Color;
import java.awt.Font;
import java.awt.GridLayout;

import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JPasswordField;

import Utils.MyTextField;

public class SignUp extends JFrame {
	private final int COUNT = 4;
	private JPasswordField[] t = new JPasswordField[COUNT];
	private String[] t_name = {"NickName", "ID", "PW", "PW Check"};
	
	public SignUp() {
		setSize(500, 500);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setLocationRelativeTo(null);
		getContentPane().setBackground(new Color(189, 215, 238));
		setLayout(null);
		
		JPanel all = new JPanel();
		
		JLabel label = new JLabel("È¸¿ø°¡ÀÔ");
		label.setFont(new Font("¸¼Àº °íµñ", Font.BOLD, 28));
		label.setOpaque(false);
		label.setBounds(30, 20, 200, 40);
		
		JPanel p1 = new JPanel(new GridLayout(0, 1, 0, 50));
		p1.setBounds(30, 80, 300, 300);
		p1.setOpaque(false);
		for (int i=0; i<COUNT; i++) {
			t[i] = new MyTextField(20, t_name[i]);
			p1.add(t[i]);
		}
		
		add(label);
		add(p1);
		setVisible(true);
	}
}
