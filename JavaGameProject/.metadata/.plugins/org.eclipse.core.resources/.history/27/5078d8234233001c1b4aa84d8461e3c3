package Utils;

import java.awt.Color;

import javax.swing.JButton;

public class MyButton extends JButton {
	private int x, y;
	public MyButton(String ImageName, int width, int height, int x, int y) {	// 이미지명, 사이즈 width, height
		this.x = x;
		this.y = y;
		setSize(width, height);
		setIcon(MyImage.getImage(ImageName, width, height));
		setBorderPainted(false);		// 버튼 테두리 설정
		setContentAreaFilled(false);	// 버튼 영역 배경 표시 설정
		setFocusPainted(false);			// 포커스 표시 설정
		setOpaque(false);
		setBackground(Color.white);
	}
	public int getXvalue() { return x; }
	public int getYvalue() { return x; }
}
