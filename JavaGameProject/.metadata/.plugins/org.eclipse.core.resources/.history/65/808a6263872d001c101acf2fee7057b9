import javax.imageio.ImageIO;
import javax.swing.ImageIcon;

public class MyImage {
	public MyImage() {
		try {
			Image img = ImageIO.read(new File("º¼.png"));
			Image re = img.getScaledInstance(42, 42, Image.SCALE_SMOOTH);
			ImageIcon icon = new ImageIcon(re);
		} catch (Exception e) {
			e.printStackTrace();
		}
	}
}
