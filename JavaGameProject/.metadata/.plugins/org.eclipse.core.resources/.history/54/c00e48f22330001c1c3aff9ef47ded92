package BAB;

import javax.swing.JLabel;

import Utils.MyImage;

public class BlockAndBall extends JLabel {
	private String[][] imageName = {{"없음", "default_block", "iron_block"}, {"Circle"}};
	private int image_num = 0;					// 배열에서 해당하는 블럭 이름을 지정하기 위한 인덱스
	private int floor = 0;						// 몇 층에 배치하는지 표현할 인덱스
	private int x = 0;							// x좌표의 인덱스 저장
	public BlockAndBall(int block_num, int floor, int x) {
		this.image_num = block_num;
		this.floor = floor;
		this.x = x;
		if (block_num != 0) {		// 블럭 인덱스가 0이 아닐때
			this.setIcon(MyImage.getImage("Block\\" + imageName[block_num], 30, 30));	// 블럭 폴더에 배열의 이름을 이용하여 이미지 삽입 사이즈는 30, 30으로 조정
			setSize(30, 30);															// 레이블의 크기 30, 30으로 지정
		}
	}
	public int getBlockNum() { return image_num; } 
	public int getFloor() { return floor; } 
	public int getXpoint() { return x; } 
}
